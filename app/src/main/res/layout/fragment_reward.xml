<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="@color/colorAccent"
              android:orientation="vertical"
              android:weightSum="1">

    <TextView
        android:id="@+id/qr_reward_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        style="?android:listSeparatorTextViewStyle"
        android:layout_below="@+id/qr_reward_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/qr_reward_name"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/qr_reward_description"/>

    <ImageView
        android:id="@+id/img_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/qr_code_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:text="@string/generate_qr_code"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/img_result"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/caution"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:layout_below="@+id/qr_code_btn"
        android:layout_alignParentStart="true"/>

</RelativeLayout>